{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "disableSizeLimit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./resources/app/*"
            ],
            "@UI/*": [
                "./resources/app/@UI/*"
            ],
            "ziggy": [
                "vendor/tightenco/ziggy/dist/index.es.js"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./resources/app/**/*.ts",
        "./resources/app/**/*.tsx",
        "./resources/app/**/*.vue",
        "node_modules/laravel-echo/typings/index.d.ts",
        "node_modules/laravel-echo/typings/index.d.ts"
    ]
}
