{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "disableSizeLimit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./resources/js/*"
            ],
            "ziggy": [
                "vendor/tightenco/ziggy/dist"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./resources/js/**/*.ts",
        "./resources/js/**/*.tsx",
        "./resources/js/**/*.vue",
        "node_modules/laravel-echo/typings/index.d.ts",
        "node_modules/laravel-echo/typings/index.d.ts"
    ]
}
